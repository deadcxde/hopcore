local placeId = game.PlaceId
if placeId == 2753915549 or placeId == 4442272183 or placeId == 7449423635 then
    BF = true
end

if BF == true then
    if _G.HopWhenMeetLoaded then 
		print("Already loaded")
	else
		_G.HopWhenMeetLoaded = 1
		print("Loaded")
		local plr = game.Players.LocalPlayer
		local Name = plr.Name
		local function HopServer()
			print(1)
		end

		if _G.HopWhenPrefix then
			spawn(function()
				while true do 
					wait(0.5)
					for i, player in pairs(game.Players:GetChildren()) do
						if player.Name ~= Name then
							if string.find(player.Name, _G.HopWhenPrefix) then
								HopServer(1)
							end
						end
					end
				end
			end)
		end
		if _G.HopWhenNickname then
			spawn(function()
				while true do 
					wait(0.5)
					for i, player in pairs(game.Players:GetChildren()) do
						if player.Name ~= Name then
							for _, nickname in pairs(_G.HopWhenNickname) do
								if player.Name == nickname then
									HopServer()
								end
							end
						end
					end
				end
			end)
		end
	end
end
